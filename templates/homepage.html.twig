			<h1>{{ record.gerecht.titel }}</h1>

			<!-- DISPLAY GEMIDDELDE WAARDERING -->
			Gemiddelde waardering: 
			{% for i in 1..5 %}
				{% if i <= record.gemiddelde_waardering|round %}
				<i class="fa fa-solid fa-star fa" style="color: #fdaf08;"></i>
				{% else %}
				<i class="fa fa-solid fa-star fa" style="color: gray;"></i>
				{% endif %}
			{% endfor %}

			<div>{{ record.gerecht.korte_omschrijving}}</div>
			<br><br><br>
			<a href="http://localhost/educom-verrukkulluk/index.php?gerecht_id={{record.gerecht.id}}&action=detail">
				<button>Smullen!</button>		
			</a>

			<div class="gerecht_data">
			<i class="fa fa-solid fa-user"></i>
			4 
			<i class="fa fa-sharp fa-regular fa-euro-sign"></i> 
			{{ record.prijs }}
				
