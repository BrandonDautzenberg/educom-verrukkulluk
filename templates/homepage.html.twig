{% extends "main.html.twig" %}

{% block header %}
	<img src="assets/img/logo-v2.png"/>
{% endblock %}

{% block content %}
	{% for record in data %}
		<div class="col-5 gerecht_blok">
			<img src="{{ record.gerecht.afbeelding }}" style="width: 100%; height: 270px;">
